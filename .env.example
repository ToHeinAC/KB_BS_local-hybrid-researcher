# =============================================================================
# OLLAMA CONFIGURATION
# =============================================================================
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=qwen3:14b
OLLAMA_FALLBACK_MODEL=qwen3:8b
OLLAMA_EMBEDDING_MODEL=snowflake-arctic-embed:latest
# Critical: Set high context for dual 4090s (128K tokens)
OLLAMA_NUM_CTX=131072
# Safety limit: stop at 90% of max context to prevent OOM
OLLAMA_SAFE_LIMIT=0.9

# =============================================================================
# CHROMADB CONFIGURATION
# =============================================================================
CHROMADB_PATH=./kb/database

# =============================================================================
# STREAMLIT CONFIGURATION
# =============================================================================
STREAMLIT_PORT=8511

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO

# =============================================================================
# PHASE 1: QUERY ANALYSIS + HITL
# =============================================================================
MAX_CLARIFICATION_QUESTIONS=3

# =============================================================================
# PHASE 2: TODO LIST
# =============================================================================
TODO_MAX_ITEMS=15
INITIAL_TODO_ITEMS=5

# =============================================================================
# PHASE 3: RESEARCH EXECUTION
# =============================================================================
N_SEARCH_QUERIES=3
M_CHUNKS_PER_QUERY=4
REFERENCE_FOLLOW_DEPTH=2
REFERENCE_RELEVANCE_THRESHOLD=0.6
MAX_ITERATIONS_PER_TASK=3
MAX_DOCS=5
DOC_WORD_LIMIT=5000

# =============================================================================
# PHASE 4: QUALITY ASSURANCE
# =============================================================================
ENABLE_QUALITY_CHECKER=true
QUALITY_THRESHOLD=300
MAX_REFLECTIONS=1

# =============================================================================
# OPTIONAL: WEB SEARCH (disabled by default)
# =============================================================================
ENABLE_WEB_SEARCH=false
TAVILY_API_KEY=
WEB_RESULTS_PER_QUERY=2
